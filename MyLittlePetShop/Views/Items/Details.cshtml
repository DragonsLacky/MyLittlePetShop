                            @Html.DisplayNameFor(model => model.Price)
                        </b>
                    </div>
                    <div class="col-3">
                        @Html.DisplayFor(model => model.Price)
                    </div>
                    <div class="col-2">
                        <b>
                            @Html.DisplayNameFor(model => model.Quantity)
                        </b>
                    </div>
                    <div class="col-3">
                        @Html.DisplayFor(model => model.Quantity)
                    </div>
                </div>
                <div class="row p-2">
                    <div class="col-5">
                        @Html.ActionLink("Back", "Index",null,htmlAttributes: new { @class="btn btn-dark"}) 
                    </div>
                    <div class="col-5">
                        @Html.ActionLink("Add to cart", "AddItemToCart", "ShoppingCart", new { id = Model.Id }, htmlAttributes: new { @class = "btn btn-dark" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-4 p-2 ml-4">
                @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, htmlAttributes: new { @class = "btn btn-dark" })
