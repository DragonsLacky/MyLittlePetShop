@{
    ViewBag.Title = "Home Page";
}

<div class="carousel slide" data-ride="carousel" data-interval="5000">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/Content/Images/Dog.jpg" />
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Content/Images/Cat.jpg" />
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Content/Images/Bird.jpg" />
        </div>
    </div>
</div>

<div>
    <hr />
    <div class="row">
        <div>

        </div>
    </div>
    <div class="container-fluid">
        @Html.Action("ShowItems", new { page = ViewBag.page })
    </div>
    <div class="container-fluid">
        @Html.Action("ShowByNew", new { page = ViewBag.page1 })
    </div>
    <div class="container-fluid">
        @Html.Action("ShowCategories", new { page = ViewBag.page2 })
    </div>
</div>

@section scripts{
    <script src="~/Scripts/AppScripts/js-ChangePage.js"></script>
    <script>
        var carousel = $('.carousel').carousel();
    </script>
    
}