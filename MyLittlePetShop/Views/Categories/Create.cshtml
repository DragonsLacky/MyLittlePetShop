@model MyLittlePetShop.Models.ShoppingCategory

@{
    ViewBag.Title = "Create";
}

<h2>Adding a new category</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <div class="form-row m-auto">
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
                <div class="col-md-10 p-0">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group col-md-8">
                @Html.LabelFor(model => model.Image, htmlAttributes: new { htmlAttributes = new { @class = "form-control col-md-2" } })
                <div class="col-md-12 p-0">
                    @Html.EditorFor(model => model.Image, new { htmlAttributes = new { @class = "form-control col-md-10 p-0" } })
                    @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-row p-3 col-md-10">
            <div class="form-group m-auto col-md-3">
                <div class="col-md-12 m-3">
                    <input type="submit" value="Create" class="btn btn-dark col-md-10" />
                </div>
            </div>
            <div class="form-group m-auto col-md-3">
                <div class="col-md-12 m-3">
                    @Html.ActionLink("Cancel", "Index",null, new { @class="btn btn-danger col-md-10"})
                </div>
            </div>
        </div>
        
    </div>
}

<div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
